@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}
<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4 form-control">
 <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your Pizza Name"/>
 <br/>

 <input type="checkbox" asp-for="Pizza.TomatoSouce">Tomato Souce</input>
 <br/>


  <input type="checkbox" asp-for="Pizza.Beef">Beef</input>
  <br/>

  <input type="checkbox" asp-for="Pizza.Cheese">Cheese</input>
  <br/>

   <input type="checkbox" asp-for="Pizza.Ham">Ham</input>
   <br/>

    <input type="checkbox" asp-for="Pizza.Mushroom">Mushroom</input>
    <br/>


     <input type="checkbox" asp-for="Pizza.Peperoni"/>Peperoni
     <br/>

     <input type="checkbox" asp-for="Pizza.Pineapple"/>Pineapple
     <br/>
     <input type="checkbox" asp-for="Pizza.Tuna"/> Tuna
     <br/>

     <input type="number" asp-for="Pizza.BasePrice" placeholder="Base Price" />
     <br/>



     <input type="number" asp-for="Pizza.FinalPrice" placeholder="Finall Price" />
     <br/>

    



        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
       


    </form>
</div>