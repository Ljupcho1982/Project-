<div class="text-center">
<div class="mainText">
  <h1 class="display-4 text-capitalize text-black">Our Great Selection of Pizza`s</h1>

    <h4>Choose one, or try our Pizza Builder! Then Oreder and Done!</h4>
    <h4>No need to give any of your details!</h4>
    <h4>We already know everthing!</h4>
    <p class="smallText"><i>Only one pizza per order</i></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 mb-5 mt-5">

            <div class="w-100 row">
                <div class="col-4" style="background-color:brown" >

                    <img src="~/images/Pizzas/Create.png" class="w-100" />

                </div>
            <div class="col-8 aligne-items-center">
                <h3 style="text-align:left">Create your own pizza</h3>
                <p style="text-align:left">Make you own pizza with our Pizza Maker</p>

                <a class="btn btn-primary" style="float:left" asp-page="Forms/CustomPizza">Try now</a>
            </div>



            </div>
        </div>

            @foreach(var pizza in Model.FakePizzaDB)
            {

                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

                <div class="col-4 mb-5">

                    <img src="@imagePath" class="w-100" asp-append-version=true />

                    <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.FinalPrice">Get this Pizza</a>



                </div>




            }
        </div>
   



   
   
       
        
